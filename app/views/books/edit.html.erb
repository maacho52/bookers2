<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

     <%= form_with model:@book, url: book_path(@book.id), method: :patch do |f| %>

       <div class="box">
         <p>Title</p>
         <%= f.text_field :title, :size=>"50" %>

         <p>Opiniton</p>
         <%= f.text_area :body, :size=>"50" %>
       </div>

       <div class="submit-button">
         <%= f.submit "Update Book", class: "btn btn-success" %>
       </div>

       <div class="button">
         <span><%= link_to "Show", book_path(@book.id) %></span>
         <span>|</span>
         <span><%= link_to "Back", '/books' %></span>
       </div>
     <% end %>
    </div>
  </div>
</div>
