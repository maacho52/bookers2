 <div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-2">
    <%= render 'users/user_info', user: @user %>
    <%= render 'users/new_book', book: @book %>
  </div>

  <div class="col-lg-1"></div>

  <div class="col-lg-5">
   <h2>Books</h2>
   <table class="table">
      <thead>
       <tr>
          <th>        </th>
          <th>Title</th>
          <th>Opinion</th>
       </tr>
      </thead>

      <tbody>

        <% @books.each do |book| %>
         <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.opinion %></td>
        <% end %>
      </tbody>
   </table>
  </div>

  <div class="col-lg-2"></div>
 </div>