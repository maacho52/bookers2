<%= render '/users/user_info', user: @user %>
<%= render '/users/new_book', book: @book %>

<div class="book">
<table class="table table-striped">
    <thead>
     <tr>
        <th>        </th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="1"></th>
     </tr>
    </thead>

    <tbody>

      <% @books.each do |book| %>
       <tr>
        <td><%= image_tag book.user.get_profile_image, size: "50,50"  %></td>
        <td><%= link_to "book.title" , book_path(book.id), class: "link" %></td>
        <td><%= book.opinion %></td>
        <td><%= link_to "Show", book_path(book.id), class: "btn btn-secondary" %></td>
       </tr>
      <% end %>
    </tbody>  