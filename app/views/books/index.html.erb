 <% if @book.errors.any? %>
 <h5><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h5>
  <ul>
      <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
      <% end %>
  </ul>
 <% end %>

 <div class="row">
  <div class="col-lg-3">
    <%= render 'users/user_info', user: current_user %>
    <%= render 'users/new_book', book: @book %>
  </div>

  <div class="col-lg-2"></div>

  <div class="col-lg-7">
   <h2>Books</h2>
   <table class="table">
      <thead>
       <tr>
          <th>        </th>
          <th>Title</th>
          <th>Opinion</th>
       </tr>
      </thead>

      <tbody>

        <% @books.each do |book| %>
         <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        <% end %>
      </tbody>
   </table>
  </div>
 </div>