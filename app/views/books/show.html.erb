<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-2">
    <%= render '/users/user_info', user: @user %>
    <%= render '/users/new_book', book: @book %>
  </div>

  <div class="col-lg-1"></div>

  <div class="col-lg-5">
    <h3>Book details</h3>
    <table class="table">
      <thead>
       <tr>
          <th>        </th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="2"></th>
       </tr>
      </thead>

      <tbody>

        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %>
              <p><%= link_to book.user.name, user_path(book.user_id) %></p>
            </td>
            <td><%= link_to book.title, book_path(book.id), class: "link" %></td>
            <td><%= book.opinion %></td>
           <% if book.user == current_user %>
             <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success" %></td>
             <td><%= link_to "Destroy", book_path(book.id), method: :delete, class: "btn btn-danger" %></td>
           <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-lg-2"></div>

</div>


