<div class="row">
  <div class="col-lg-3">
    <%= render '/users/user_info', user: @user %>
    <%= render '/users/new_book', book: @book %>
  </div>

  <div class="col-lg-2"></div>

  <div class="col-lg-7">
    <h3>Book details</h3>
    <table class="table">
      <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(100,100) %>
              <p><%= link_to @book.user.name, user_path(@book.user_id) %></p>
            </td>
            <td><%= link_to @book.title, book_path(@book), class: "link" %></td>
            <td><%= @book.opinion %></td>
           <% if @book.user == current_user %>
             <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
             <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
           <% end %>
          </tr>
      </tbody>
    </table>
  </div>
</div>