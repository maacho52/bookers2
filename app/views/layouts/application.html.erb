<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark text-white" >
      <nav class="navbar-brand">
        <div class="container">
          <h5>Bookers</h5>
          <div class="collapse navbar-collapse">
           <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>
                <li class="nav-item"><%= link_to "Home", root_path, class: "text-white" %></li>
                <li class="nav-item"><%= link_to "Users", users_path, class: "text-white" %></li>
                <li class="nav-item"><%= link_to "books", books_path, class: "text-white" %></li>
                <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, class: "text-white", method: :delete %></li>
             <% else %>
                <li class="nav-item"><%= link_to "Home", root_path, class: "text-white" %></li>
                <li class="nav-item"><%= link_to "About", about_path, class: "text-white" %></li>
                <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "text-white" %></li>
                <li class="nav-item"><%= link_to "Log in", new_user_session_path, class: "text-white" %></li>
             <% end %>
           </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
     <% if notice %>
       <p><%= notice %></p>
     <% end %>

     <% if alert %>
       <p><%= alert %></p>
     <% end %>

     <%= yield %>
    </main>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-4"></div>
          <div class="col-lg-4">
           <p>CopyRight Infratop.inc</p>
          </div>
          <div class="col-lg-4"></div>
        </div>
      </div>
    </footer>
  </body>
</html>
