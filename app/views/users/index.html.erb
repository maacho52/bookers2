<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-2">
    <%= render 'user_info', user: @user %>
    <%= render 'new_book', book: @book %>
  </div>

  <div class="col-lg-1"></div>

  <div class="col-lg-5">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.get_profile_image(100,100) %></th>
            <th>
              <%= user.name %>
            </th>
            <th><%= link_to "show", user_path(@user.id) %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-lg-2"></div>
</div>
