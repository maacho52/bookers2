<%= render 'user_info', user: @user %>
<%= render 'new_book', book: @book %>

<div class="books">
  <h2>Books</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>      </th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th><%= image_tag book.user.get_profile_image(100,100) %></th>
          <th>
            <%= link_to book.title, book_path(book.id)  %>
          </th>
          <th><%= book.opinion %></th>
        </tr>
      <% end %>
    </tbody>
</div>

