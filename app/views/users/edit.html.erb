<div class="row">
  <div class="col-lg-4"></div>
  <div class="col-lg-4">
   <h2>User info</h2>

   <% if @user.errors.any? %>
   <%= pluralize(@user.errors,count, "error") %> prohibited this obj from being saved:
   <ul>
     <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>


   <%= form_with model: @user do |f| %>
     <label for="inputName">Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputName"%>
     <label for="inputImage">Image</label>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
     <label for="introduction">Introduction</label>
     <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction"%>
     <%= f.submit "Update User", class: "btn btn-seconday" %>
   <% end %>
  </div>

  <div class="col-lg-4"></div>
</div>