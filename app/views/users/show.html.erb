<div class="row">
  <div class="col-lg-3">
    <%= render 'user_info', user: @user %>
    <%= render 'new_book', book: @book %>
  </div>

  <div class="col-lg-2"></div>

  <div class="col-lg-7">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th>      </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <th><%= image_tag book.user.get_profile_image(100,100) %></th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
