<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-2">
    <%= render 'user_info', user: @user %>
    <%= render 'new_book', book: @book %>
  </div>

  <div class="col-lg-1"></div>

  <div class="col-lg-5">
    <h2>Book details</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>      </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <th><%= image_tag book.user.get_profile_image(100,100) %></th>
            <th><%= book.title %></th>
            <th><%= book.opinion %></th>
          </tr>
        <% end %>
      </tbody>
  </div>

  <div class="col-lg-2"></div>

</div>
